<%= form_for @project, html: { class: "form-horizontal" } do |f| %>
  <fieldset>
    <div class="control-group <%= "error" if @project.errors.include?(:name) or @project.errors.include?(:_id) %>">
      <%= f.label :name, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :name %>
        <span class="help-block">
          <%= @project.errors[:name].join(", ")%>
          <%= @project.errors[:_id].join(", ")%>
        </span>
      </div>
    </div>
  </fieldset>
  
  <div class="form-actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
