<li>
  <span class="pull-right"><%= link_to [ repo.project, repo ], method: :delete, confirm: "4 real?" do %><i class="icon icon-trash"></i><% end %></span>
<%= link_to repo.name, [ repo.project, repo ] %> - <small><%= repo.uri %></small>
  <br />
  <% if repo.builds.any? %>
    <% build = repo.builds.last %>
    <small>
      <%= link_to [ repo.project, repo, build ] do %>
        <em class="<%= build.status %>">
          <%= md "**##{build.number}**: " + build.summary %>
        </em>
      <% end %>
    </small>
  <% end %>
</li>
